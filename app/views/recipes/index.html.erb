<%= render "shared/page_title", title: "Showing all Recipes" %>

<div align="center">
  <%= will_paginate %>
</div>

<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-1 chef-icon">
        <%= link_to gravatar_for(recipe.chef, size: 100) %>
      </div>
      <div class="well col-md-11">
        <div class="col-md-9 chef-info">
          <p><b><%= link_to recipe.name, recipe_path(recipe) %></b></p>
          <p>Description: <%= recipe.description %></p>
          <p><font size="2">Chef: <%= recipe.chef.chefname %></p>
          <p><font size="2">Created <%= time_ago_in_words(recipe.created_at) %> ago</font></p>
        </div>
        <% if logged_in? && current_chef == recipe.chef %>
          <div class="col-md-12 recipe-actions">
            <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-xs btn-warning" %>
            <%= link_to "Delete this recipe", recipe_path(recipe), method: :delete,
                                              data: {confirm: "Are you sure you want to delete this recipe?"},
                                              class: "btn btn-xs btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div align="center">
  <%= will_paginate %>
</div>
