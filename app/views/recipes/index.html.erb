<%= render "shared/page_title", title: "Showing all Recipes" %>

<% @recipes.reverse.each do |recipe| %>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-1 chef_icon">
        <%= link_to gravatar_for(recipe.chef, size: 100) %>
      </div>
      <div class="well col-md-11 chef_info">
        <p><b><%= link_to recipe.name, recipe_path(recipe) %></b></p>
        <p>Contact: <%= recipe.description %></p>
        <p><font size="2">Created <%= time_ago_in_words(recipe.created_at) %> ago</font></p>
      </div>
    </div>
  </div>
<% end %>

<hr />

<p>
  <b><font size="4"><%= link_to "Back", root_path %></font></b>
</p>
