<%= render "shared/page_title", title: "Showing all Chefs"%>

<div align="center">
  <%= will_paginate %>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-1 chef_icon">
        <%= link_to gravatar_for(chef, size: 100) %>
      </div>
      <div class="well col-md-11">

        <div class="col-md-9 chef_info">
          <p><b><%= link_to "Chef: " + chef.chefname, chef_path(chef) %></b></p>
          <p>Contact: <%= chef.email %></p>
          <p><font size="2">Joined <%= time_ago_in_words(chef.created_at) %> ago</font></p>
        </div>
        <div class="col-md-2 chef_info">
          <p><b><%= chef_has_recipes?(chef) %></b></p>
          <p><b><%= get_last_recipe_link(chef) %></b></p>
        </div>

      </div>
    </div>
  </div>
<% end %>

<div align="center">
  <%= will_paginate %>
</div>
