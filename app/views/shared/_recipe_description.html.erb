  <div class="col-md-9 chef-info">
    <p><b><%= link_to recipe.name, recipe_path(recipe) %></b></p>
    <p>Description: <%= recipe.description %></p>
    <% if recipe.ingredients.any? %>
      <p>Ingredients: <%= render recipe.ingredients %> </p>
    <% end %>
    <p><font size="2">Created <%= time_ago_in_words(recipe.created_at) %> ago by <%= recipe.chef.chefname %> | <%= pluralize(recipe.comments.count, "Comment" ) %></font></p>
  </div>
  <% if logged_in? && (current_chef == recipe.chef || current_chef.admin?) %>
    <div class="col-md-12 recipe-actions">
      <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-xs btn-warning" %>
      <%= link_to "Delete this recipe", recipe_path(recipe), method: :delete,
                                        data: {confirm: "Are you sure you want to delete this recipe?"},
                                        class: "btn btn-xs btn-danger" %>
    </div>
  <% end %>
